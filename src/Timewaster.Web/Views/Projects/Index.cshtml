@model Timewaster.Web.ViewModels.ProjectViewModel
@{
    ViewData["Title"] = Model.ProjectName;
}

<h4>@Model.ProjectName</h4>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="row">
                <div class="col-sm">
                    <h6>Sprints</h6>
                </div>
                <div class="col-sm">
                    <a class="border-dark" asp-area="" asp-controller="Plans" asp-action="Index">&#43; Add spring</a>
                </div>
            </div>
            <div class="list-group">
                @if (Model.CurrentSprint != null)
                {
                    <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-1">@Model.CurrentSprint?.ReferenceKey</h5>
                            <small>@Model.CurrentSprint?.CreatedAt.ToShortDateString() - @Model.CurrentSprint?.ClosingAt.ToShortDateString()</small>
                        </div>
                        <small>And some small print.</small>
                    </a>
                }
                else
                {
                    <small>No sprint defined yet.</small>
                }
                @foreach (var sprint in Model.Sprints)
                {
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-1">@sprint.ReferenceKey</h5>
                            <small>@sprint.CreatedAt.ToShortDateString() - @sprint.ClosingAt.ToShortDateString()</small>
                        </div>
                        <small class="text-muted">And some muted small print.</small>
                    </a>
                }
            </div>       
        </div>
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm">
                    <h6>Stories</h6>
                </div>
                <div class="col-sm">
                    <h6>Add story</h6>
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                    <h6>Recent activities</h6>
                </div>
            </div>
        </div>
    </div>
</div>

