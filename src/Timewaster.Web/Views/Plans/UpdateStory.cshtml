@model Timewaster.Web.ViewModels.StoryViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Issue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SprintId)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.PartitionKey)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="UpdateStory" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index" asp-route-id="@Model.SprintId">Back to Plan</a>
</div>