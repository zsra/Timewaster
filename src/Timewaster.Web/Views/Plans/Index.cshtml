@model Timewaster.Web.ViewModels.PlanViewModel
@{
    ViewData["Title"] = "Planning";
}

<div class="container">
    <div>

    </div>
    <table class="table kanban-table">
        <thead>
            <tr>
                <th scope="col">Story</th>
                @foreach (var status in Model.Statuses)
                {
                    <th scope="col">@status.Name</th>
                }
                <th scope="col">+</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sprintStory in Model.SprintStories)
            {
            <tr>
                @if (sprintStory.Story == null)
                {
                    <th scope="row">
                        <div class="card story-empty-card">
                            <div class="card-body">
                                <h5 class="card-title">Add story</h5>
                            </div>
                        </div>
                    </th>
                }
                else
                {
                    <th scope="row">
                        <div class="card story-card">
                            <div class="card-body">
                                <h5 class="card-title">@sprintStory.Story</h5>
                            </div>
                        </div>
                    </th>
                    @foreach (var item in sprintStory.GroupOfIssues)
                    {
                        <th scope="row">
                            @if (item == sprintStory.GroupOfIssues.First())
                            {
                                <div class="card issue-empty-card">
                                    <div class="card-body">
                                        <h5 class="card-title">Add issue</h5>
                                    </div>
                                </div>
                            }
                            <div class="card issue-card">
                                <div class="card-body">

                                </div>
                            </div>
                        </th>
                    }
                }
            </tr>
            }
        </tbody>
    </table>
</div>